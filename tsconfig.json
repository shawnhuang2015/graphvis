{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
      "preserveConstEnums": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "removeComments": true,
      "sourceMap": true,
      "allowJs":false,
      "target": "es5"
    },
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
}
