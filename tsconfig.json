{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
      "preserveConstEnums": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "removeComments": true,
      "sourceMap": true,
      "allowJs":false,
      "target": "es5",
      // "lib":"dom,es5,scripthost,es6"
      "baseUrl": "/",
      "paths": {
        "ZoomCharts": ["zoomcharts/zoomcharts.d.ts"]
      }
    },
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
}
